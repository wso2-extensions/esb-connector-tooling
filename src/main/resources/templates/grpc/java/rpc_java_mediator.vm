  #if($fieldDescriptorProto.type == "TYPE_MESSAGE")
    ${pkgPrefix}#getTypeName($fieldDescriptorProto.typeName, $packageN)[]##
  #else
    #getJavaClassName($fieldDescriptorProto)[]##
  #end
#else
  #getJavaClassName($fieldDescriptorProto)##
#end
#end

